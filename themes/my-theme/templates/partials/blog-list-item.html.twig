{% set image = page.media[page.header.featured_image] ?: page.media.images|first %}
{% set title = page.title %}
{% set readmore_txt = blog.header.readmore_text|raw|default('Lesen') %}

<article>
    {% if image %}
    <a href="{{page.url}}" class="image">
        {{ image.cropZoom(416,256).loading('lazy').attribute('width', '300').attribute('height','300').html(title,title,'')|raw }}
    </a>
    {% endif %}
    <h3>{{page.title}}</h3>

    <p>
    {% if page.summary != page.content %}
            {{ page.summary|striptags|raw }}
        {% else %}
            {{ page.content|striptags|raw }}
        {% endif %}
    </p>
    <ul class="actions">
        <li><a href="{{page.url}}" class="button">{{readmore_txt}}</a></li>
    </ul>
</article>
